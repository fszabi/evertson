generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ServerEvent {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  server       String
  status       Status   @default(COMING_SOON)
  date         DateTime
  first_prize  String
  second_prize String
  third_prize  String
}

enum Status {
  COMING_SOON
  ONGOING
  ENDED
}
